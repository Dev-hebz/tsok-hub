rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Websites collection
    match /websites/{websiteId} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can write (for production, implement auth)
      // For now, allow all writes (change this in production!)
      allow write: if true;
      
      // For production with Firebase Auth, use:
      // allow write: if request.auth != null;
    }
  }
}
